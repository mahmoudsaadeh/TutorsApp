<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="28px">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerViewCircularImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/rvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/recyclerViewCircularImage"
        android:maxWidth="200dp"
        android:text="@string/rvTeacherName"
        android:textColor="#800080"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <RatingBar
        android:id="@+id/rvTeacherRating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="211dp"
        android:layout_marginTop="51dp"
        android:layout_toEndOf="@id/recyclerViewCircularImage"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:padding="0px"
        android:rating="4.7"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/decimalRatingTextView"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="206dp"
        android:layout_toEndOf="@id/recyclerViewCircularImage"
        android:gravity="center"
        android:maxLength="5"
        android:text="@string/decimalRatingTextView"
        android:textColor="#0E9EAF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>