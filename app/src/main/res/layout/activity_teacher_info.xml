<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    tools:context=".TeacherInfoActivity"
    android:background="#ffffff"
    android:backgroundTint="#800080"
    tools:background="#800080">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27px"
            android:orientation="vertical"
            android:padding="25px">

            <EditText
                android:id="@+id/teacherNameETMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherNameETMultiLine"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/teacherAddressETMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherAddressETMultiLine"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/teacherAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherAge"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/teacherSubjectsETMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherSubjectsETMultiLine"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/teacherExperienceETMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherExperienceETMultiLine"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/teacherEmail11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherEmail11"
                android:inputType="textEmailAddress"
                android:onClick="emailTeacher"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/teacherPhone11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/teacherPhone11"
                android:inputType="phone"
                android:onClick="callTeacher"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <EditText
                android:id="@+id/editTextSalaryNumberSigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:hint="@string/editTextSalaryNumberSigned"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="17px"
                android:layout_marginBottom="11px"
                android:text="@string/ratingTextView"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:rating="0"
                android:theme="@style/RatingBar"/>

            <TextView
                android:id="@+id/profilePicTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginBottom="25px"
                android:text="@string/profilePic"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21px"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/locationTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="@string/location"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/getTeacherLocationBtn"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="18px"
                android:background="@drawable/rounded_corners_2"


                android:fontFamily="sans-serif-black"


                android:onClick="showTeacherLocation"
                android:paddingLeft="6dp"

                android:paddingTop="6dp"

                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:shadowColor="#FFFFFF"
                android:text="@string/getTeacherLocationBtn"
                android:textColor="#ffffff"
                android:textSize="9pt"
                android:textStyle="bold"
                tools:shadowColor="#FFFFFF" />


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>